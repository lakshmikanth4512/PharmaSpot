{
  "name": "PharmaSpot",
  "productName": "PharmaSpot",
  "version": "1.4.4",
  "description": "Easy Point of Sale for Pharmacies",
  "author": "Patterns Digital Limited",
  "license": "MIT",
  "main": "start.js",
  "build": {
    "appId": "com.patternsdigital.pharmaspot",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "start.js",
      "index.html",
      "assets/**/*",
      "!node_modules/devDependencies/**/*",
      "!test/**/*",
      "!dist/**/*"
    ]
  },
  "scripts": {
    "start": "electron-forge start",
    "start:debug": "DEBUG=electron-forge* electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "test": "jest"
  },
  "dependencies": {
    "electron-context-menu": "^3.6.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.4",
    "@electron-forge/maker-deb": "^6.0.4",
    "@electron-forge/maker-rpm": "^6.0.4",
    "@electron-forge/maker-squirrel": "^6.0.4",
    "@electron-forge/maker-zip": "^6.0.4",
    "@electron-forge/publisher-github": "^6.0.4",
    "electron": "^22.3.27",
    "jest": "^29.7.0"
  }
}
